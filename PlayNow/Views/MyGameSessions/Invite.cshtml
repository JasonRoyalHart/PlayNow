@model PlayNow.Models.GameSessionViewModel
@{
    ViewBag.Title = "Invite";
}

<h2>Invite Players To Your Game</h2>
@using (Html.BeginForm("InviteResult", "MyGameSessions", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.GameSessionId)
    <div>
        <table class="table">
            <thead>
                <tr style="margin-bottom:20px">
                    <th class="tableTitle"></th>
                    <th class="tableTitle"></th>
                    <th class="tableTitle"></th>
                    <th class="tableTitle"></th>
                </tr>
            </thead>
                @for (var i = 0; i < Model.NumberOfCurrentUsers+1; i++)
                {
                    <tr style="margin-bottom:20px">

                        <td>Player</td>
                        @if (i + 1 <= Model.NumberOfCurrentUsers)
                        {

                            <td>@Model.GameSessionToEdit.Users.ElementAt(i).DisplayName</td>
                        }
                        else
                        {
                            <td>None</td>
                        }

                        @if (i + 1 <= Model.NumberOfCurrentUsers)
                        {
                            if (Model.CurrentUserModel.UserId == Model.GameSessionToEdit.Users.ElementAt(i).UserId)
                            {
                                <td></td>
                            }
                            else
                            {
                                <td><input type="button" value="Remove" onclick="location.href='@Url.Action("Remove", "MyGameSessions", new { GameSessionToRemoveFrom = Model.GameSessionToEdit.GameSessionId, UserNumberToRemove = i })'" /></td>
                            }
                        }
                        else
                        {
                            <td><input type="submit" class="btn btn-default" value="Invite" /></td>
                            <td>@Html.DropDownListFor(m => m.GameSession.UserId, new SelectList(Model.InvitableUsers, "UserId", "DisplayName"), "Name", new { @class = "form-control" })</td>
                            <td>@Model.GameSessionId</td>
                        }
                    </tr>
                }
            </table>
        </div>
}