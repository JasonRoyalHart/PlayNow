@model PlayNow.Models.ChatRoomMessageViewModel
@{
    ViewBag.Title = "ChatRoomAddMessagePartial";
}

@using (Html.BeginForm("AddMessage", "GeneralChat", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div>
        <table class="table">
            <thead>
                <tr style="margin-bottom:20px">
                    <th class="tableTitle"></th>
                    <th class="tableTitle"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.TextBoxFor(m => m.Message, new { @class = "form-control" })</td>
                    <td><input type="submit" class="btn btn-default" value="Submit Message" /></td>
                </tr>
            </tbody>
        </table>
    </div>
}
